{
    "compilerOptions": {
        "target": "es2017",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "resolveJsonModule": true,
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "outDir": "../built/editor",
        "rootDir": "..",
        "newLine": "LF",
        "sourceMap": false,
        "jsx": "react",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ScriptHost",
            "ES2017",
            "ES2018.Promise"
        ]
    },
    "include": [
        "**/*",
        "../node_modules/pxt-core/react-common/**/*"
    ]
}
