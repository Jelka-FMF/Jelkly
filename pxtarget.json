{
    "id": "jelka",
    "name": "Jelkly",
    "title": "Jelkly",
    "description": "Blockly editor for creating and editing Jelka FMF patterns",

    "corepkg": "core",
    "bundleddirs": ["libs/core"],

    "cloud": {
        "packages": true,
        "sharing": true,
        "publishing": true,
        "importing": true
    },

    "runtime": {
        "mathBlocks": true,
        "loopsBlocks": true,
        "logicBlocks": true,
        "variablesBlocks": true,
        "listsBlocks": true,
        "textBlocks": true,
        "functionBlocks": true,
        "breakBlock": true,
        "continueBlock": true,
        "functionsOptions": {
            "useNewFunctions": true
        },
        "onStartColor": "#1E90FF",
        "onStartNamespace": "basic",
        "onStartWeight": 69
    },

    "simulator": {
        "autoRun": true,
        "aspectRatio": 1.05
    },

    "appTheme": {
        "logo": "./static/icons/favicon-wide.svg",
        "docsLogo": "./static/icons/favicon-wide.svg",
        "portraitLogo": "./static/icons/favicon.svg",
        "appLogo": "./static/icons/favicon.svg",
        "cardLogo": "./static/icons/favicon.svg",

        "organization": "Fakulteta za matematiko in fiziko",
        "organizationUrl": "https://www.fmf.uni-lj.si/",
        "organizationLogo": "./static/orglogowide.png",
        "organizationWideLogo": "./static/orglogowide.png",

        "homeUrl": "https://jelkly.fmf.uni-lj.si/",
        "logoUrl": "https://jelkly.fmf.uni-lj.si/",
        "embedUrl": "https://jelkly.fmf.uni-lj.si/",
        "shareUrl": "https://jelkly.fmf.uni-lj.si/",
        "contactUrl": "https://jelkly.fmf.uni-lj.si/docs/contact.html",
        "feedbackUrl": "https://jelkly.fmf.uni-lj.si/docs/contact.html",
        "githubUrl": "https://github.com/Jelka-FMF/Jelkly",

        "crowdinProject": "makecode",

        "docMenu": [
            {
                "name": "Docs",
                "path": "/index"
            },
            {
                "name": "About",
                "path": "/about"
            }
        ],

        "homeScreenHero": {
            "name": "Dokumentacija",
            "description": "Preberite si dokumentacijo urejevalnika Jelkly",
            "imageUrl": "/static/banner/lights.png",
            "url": "https://jelkly.fmf.uni-lj.si/docs/",
            "cardType": "link"
        },

        "boardName": "Jelka",
        "boardNickname": "Jelka",

        "accentColor": "#2742AB",
        "backgroundColor": "#FFFFFF",
        "blockColors": {
            "logic": "#00A4A6",
            "loops": "#00AA00",
            "math": "#9400D3",
            "variables": "#DC143C",
            "text": "#B8860B",
            "advanced": "#00272B",
            "functions": "#3455DB",
            "arrays": "#E65722"
        },
        "monacoColors": {
            "editor.background": "#ECF0F1"
        },

        "blocklyOptions": {
            "grid": {
                "spacing": 45,
                "length": 7,
                "colour": "rgba(189, 195, 199, 0.30)",
                "snap": false
            }
        },

        "experiments": [
            "accessibleBlocks",
            "blocksErrorList",
            "debugExtensionCode",
            "identity"
        ],

        "extendEditor": true,
        "extendFieldEditors": false,

        "errorList": true,
        "blocksErrorList": true,
        "ignoreDocsErrors": false,
        "blocksCollapsing": true,
        "workspaceSearch": true,
        "addNewTypeScriptFile": true,
        "showProjectSettings": true,
        "saveInMenu": true,
        "hasReferenceDocs": true,
        "hideHomeDetailsVideo": true,
        "invertedMenu": true,
        "coloredToolbox": true,
        "monacoToolbox": true,
        "hasAudio": false,
        "highContrast": true,
        "greenScreen": true,
        "qrCode": true,
        "print": true,
        "debugger": true,
        "python": true,
        "selectLanguage": true,
        "tutorialCodeValidation": true,
        "tutorialSimSidebarLayout": true,
        "immersiveReader": true,
        "condenseProfile": true,
        "nameProjectFirst": true,
        "githubEditor": true,
        "openProjectNewTab": true,

        "simGifTransparent": "rgba(0,0,0,0)",
        "simGifMaxFrames": 44,
        "simScreenshot": true,
        "simScreenshotMaxUriLength": 300000,
        "simGif": true,
        "simGifWidth": 240,

        "timeMachine": true,
        "timeMachineDiffInterval": 600000,
        "timeMachineSnapshotInterval": 1800000,

        "availableLocales": [
            "en",
            "ar",
            "bg",
            "ca",
            "cs",
            "cy",
            "da",
            "de",
            "el",
            "es-ES",
            "fi",
            "fr",
            "he",
            "hu",
            "is",
            "it",
            "ja",
            "ko",
            "nl",
            "nb",
            "nn-NO",
            "pl",
            "pt-BR",
            "pt-PT",
            "ru",
            "si-LK",
            "sk",
            "sl",
            "sr",
            "sv-SE",
            "tr",
            "uk",
            "vi",
            "zh-CN",
            "zh-TW"
        ]
    },

    "queryVariants": {
        "hidemenu": {
            "appTheme": {
                "hideMenuBar": true
            }
        }
    }
}
